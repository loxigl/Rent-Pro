FROM node:20-alpine

# Установка рабочей директории
WORKDIR /app

# Установка зависимостей для разработки
COPY package.json package-lock.json* ./
RUN npm ci

# Не копируем все файлы, так как используем том для разработки
# Это позволяет изменять код в реальном времени без пересборки контейнера

# Порт для Next.js dev сервера
EXPOSE 3000

# Запуск dev-сервера с поддержкой горячей перезагрузки
CMD ["npm", "run", "dev"]